
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container-fluid px-4">
    <h1 style="text-align:center" class="mt-4">Dashboard</h1>
    <br />
    <br />
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <h3 style="text-align:center; font-weight:bold">
                        Categories
                    </h3>
                    <br />
                    <br />
                    <h3 style="text-align:center">@ViewBag.categoriesCount</h3>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="#">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <h3 style="text-align:center; font-weight:bold">Products</h3>
                    <br />
                    <br />
                    <h3 style="text-align:center">@ViewBag.productsCount</h3>


                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="#">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">
                    <h3 style="text-align:center; font-weight:bold">
                        Orders
                    </h3>

                    <br />
                    <br />
                    <h3 style="text-align:center"> @ViewBag.ordersCount</h3>

                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="#">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <h3 style="text-align:center; font-weight:bold">Payments</h3>
                    <br />
                    <br />
                    <h3 style="text-align:center">@ViewBag.paymentsCount</h3>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="#">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <h3 style="text-align:center; font-weight:bold">Comments</h3>
                    <br />
                    <br />
                    <h3 style="text-align:center">@ViewBag.commentsCount</h3>

                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="#">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
      
    </div>
 
</div>
